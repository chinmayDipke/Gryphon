package JdbcSql;
import java.sql.*;
public class DeleteDatabase1 {

	public static void main(String[] args) {
		
		String url="jdbc:mysql://localhost:3305/";
		String user="root";
		String password="arconn";
		
		Connection con = null;
		Statement stmt = null;
				
		try {
			
			//step2: load the drivers
			Class.forName("com.mysql.cj.jdbc.Driver");
			
			//step3:connect the mysql
			con=DriverManager.getConnection(url,user,password);
	        System.out.println("Database connected Successfully");
	        
	         //step4:create the statement
	         stmt=con.createStatement();
	         String query="DROP DATABASE  PRP_CSE_C";
	         
	         //step5: executes the query
	         stmt.executeUpdate(query);
	         
	         //step6: skip
	         System.out.println("Database DELTED Successfully");
	         
	         //step7: close the connection
	         con.close();
	         
			
		}
		catch(Exception e) 
		{
			e.printStackTrace();
		}
		finally
		{
			try 
			{
				if(con!=null)
				{
					con.close();
				}
				if(stmt!=null)
				{
					con.close();
				}
			}
			catch(Exception e) 
			{
				e.printStackTrace();
			}
		}

	}

}
