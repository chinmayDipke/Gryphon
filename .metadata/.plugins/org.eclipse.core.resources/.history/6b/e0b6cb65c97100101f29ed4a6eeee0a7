package MuiltiThreading;


class ThreadBooks extends Thread{
	static int tickets = 5;
	
	public void run() {
		try {
			while(tickets != 0) {
				System.out.println("Enter Your Name: "+Thread.currentThread().getName());
				
				System.out.println("Enter How many You Want: ");
				int ticket_amount = Thread.activeCount();
				if(tickets < ticket_amount) {
					System.out.println("No Ticket Available");
				}
				else if(tickets >= ticket_amount) {
					tickets = tickets - ticket_amount;
					System.out.println(ticket_amount+" : Ticket Booked");
					System.out.println("***********************************");
				}else {
					System.out.println("Some error occured");
				}
				System.out.println("Ticket Available: "+ tickets);
			}

	
		}
		catch(Exception e) {
			System.out.println(e);
		}
	}	
}

public class BookWithThreads extends ThreadBooks {

	public static void main(String[] args) {
		Thread user1 = new Thread();
		Thread user2 = new Thread();
		Thread user3 = new Thread();
		Thread user4 = new Thread();
		Thread user5 = new Thread();
		user1.start();
//		ThreadBooks op = new ThreadBooks();
//		op.ticketBook();

	}

}
