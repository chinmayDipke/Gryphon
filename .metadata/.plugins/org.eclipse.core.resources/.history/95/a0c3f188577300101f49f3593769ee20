package JdbcSql;

import java.awt.*;
import javax.swing.*;
import java.awt.event.*;
import java.sql.*;

public class Student_Data extends JFrame {
	
	//UI
	JLabel l1, l2, l3;
	JTextField tf1, tf2, tf3;
	JButton b1, b2, b3, b4;
	
	//JDBC
	Connection con;
	Statement stmt;
	ResultSet rs;
		
	Student_Data()
	{
		setLayout(null);//default border
		
		//Labels
		l1 = new JLabel("Student_ID");
		l2 = new JLabel("Student_Name");
		l3 = new JLabel("Student_Salary");
		
		//TextField
		tf1 = new JTextField();//20 default value
		tf2 = new JTextField();
		tf3 = new JTextField();
		
		//Buttons
		b1 = new JButton("First");//100,100,100,30
		b2 = new JButton("Next");//
		b3 = new JButton("Prev");
		b4 = new JButton("Last");
		
		l1.setBounds(100, 100, 100, 30);
		l2.setBounds(100, 120, 100, 30);
		l3.setBounds(100, 140, 100, 30);
		
		tf1.setBounds(200, 100, 100, 30);
		tf2.setBounds(200, 100, 100, 30);
		tf3.setBounds(200, 100, 100, 30);
		
		
		add(tf1);

		add(l1);
		add(l2);
		add(l3);
		setSize(300,300);
		setVisible(true);
		
		
		
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		new Student_Data();
	}

}
