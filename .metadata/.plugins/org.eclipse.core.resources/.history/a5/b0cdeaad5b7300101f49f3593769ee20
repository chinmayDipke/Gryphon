package JdbcSql;

import java.awt.*;
import javax.swing.*;
import java.awt.event.*;
import java.sql.*;

public class Student_Data extends JFrame implements ActionListener {
	
	//UI
	JLabel l1, l2, l3;
	JTextField tf1, tf2, tf3;
	JButton b1, b2, b3, b4;
	
	//JDBC
	Connection con;
	Statement stmt;
	ResultSet rs;
		
	Student_Data()
	{
		setLayout(null);//default border
		
		//Labels
		l1 = new JLabel("Student_ID");
		l2 = new JLabel("Student_Name");
		l3 = new JLabel("Student_Salary");
		
		//TextField
		tf1 = new JTextField();//20 default value
		tf2 = new JTextField();
		tf3 = new JTextField();
		
		//Buttons
		b1 = new JButton("First");//100,100,100,30
		b2 = new JButton("Next");//
		b3 = new JButton("Prev");
		b4 = new JButton("Last");
		
		l1.setBounds(100, 100, 100, 30);
		tf1.setBounds(220, 100, 100, 30);

		l2.setBounds(100, 140, 100, 30);
		tf2.setBounds(220, 140, 100, 30);

		l3.setBounds(100, 180, 100, 30);
		tf3.setBounds(220, 180, 100, 30);
				
		b1.setBounds(100, 220, 100, 30);
		b2.setBounds(220, 220, 100, 30);
		b3.setBounds(100, 260, 100, 30);
		b4.setBounds(220,260,100,30);
		
		add(l1);
		add(tf1);
		
		add(l2);
		add(tf2);
		
		add(l3);
		add(tf3);
		
		add(b1);
		add(b2);
		add(b3);
		add(b4);
		
		b1.addActionListener(this);
		b2.addActionListener(this);
		b3.addActionListener(this);
		b4.addActionListener(this);
		
		setSize(400,400);
		setVisible(true);

		String url="jdbc:mysql://localhost:3305/mydata";
		String user="root";
		String password="arconn";
		Connection con = null;
		Statement stmt = null;
		
		try
		{
			Class.forName("com.mysql.cj.jdbc.Driver");
			
			//step3:connect the mysql
			con=DriverManager.getConnection(url,user,password);
	        
			stmt=con.createStatement(rs.TYPE_SCROLL_INSENSITIVE, rs.CONCUR_READ_ONLY);
	        
			rs = stmt.executeQuery("selct * from students");
			
			if(rs.next()) 
			{
				tf1.setText(rs.getString(1));
				tf1.setText(rs.getString(2));
				tf1.setText(rs.getString(3));
			}
	        
	        
		}
		catch(Exception e)
		{
			
		}
		
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		
		
	}

	

	
	
	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		new Student_Data();
	}

}
